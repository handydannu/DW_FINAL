<UserControl x:Class="BAPPEDADW.Master.MClearData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="BERSIHKAN SELURUH DATA DI PERANGKAT LUNAK DATA WAREHOUSE" HorizontalAlignment="Center" Style="{StaticResource Heading2}" />
                <Button Padding="10" Name="bBersihkan" Content="KOSONGKAN" FontSize="20" Width="380" FontWeight="ExtraBlack" Click="bBersihkan_Click"/>
                
                <TextBlock Padding="0,20" Text="*) SELURUH DATA AKAN HILANG KECUALI DATA LOGON" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
